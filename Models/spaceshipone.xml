<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>spaceshipone.ac</path>

  <nasal>
    <load>
      var livery_update = aircraft.livery_update.new("Aircraft/SpaceShip-One/Models/Liveries", 10);
    </load>
    <unload>
      livery_update.stop();
    </unload>
  </nasal>

  <animation>
    <!-- Objets opaques -->
    <object-name>sso1</object-name>
    <object-name>sso2</object-name>
    <object-name>sso3</object-name>
    <object-name>sso4</object-name>
    <object-name>sso5</object-name>

    <!-- Objets transparents -->
    <object-name>sso6</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>sso1</object-name>
    <object-name>sso2</object-name>
    <object-name>sso3</object-name>
    <object-name>sso4</object-name>
    <object-name>sso5</object-name>

    <property-base>sim/model/livery</property-base>
    <texture-prop>texture</texture-prop>
    <texture>texture.png</texture>
<!--
    <diffuse>
      <red-prop>diffuse/red</red-prop>
      <green-prop>diffuse/green</green-prop>
      <blue-prop>diffuse/blue</blue-prop>
    </diffuse>

    <ambient>
      <red-prop>ambient/red</red-prop>
      <green-prop>ambient/green</green-prop>
      <blue-prop>ambient/blue</blue-prop>
    </ambient>
-->
    <specular>
      <red-prop>specular/red</red-prop>
      <green-prop>specular/green</green-prop>
      <blue-prop>specular/blue</blue-prop>
    </specular>

    <emission>
      <red-prop>emission/red</red-prop>
      <green-prop>emission/green</green-prop>
      <blue-prop>emission/blue</blue-prop>
    </emission>
<!--
    <shininess>
      <shininess-prop>shininess</shininess-prop>
    </shininess>
-->
  </animation>

  <effect>
    <inherits-from>Aircraft/Generic/Effects/Fuselagereflect</inherits-from>
    <object-name>sso1</object-name>
    <object-name>sso2</object-name>
    <object-name>sso3</object-name>
    <object-name>sso4</object-name>
    <object-name>sso5</object-name>
  </effect>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>sso6</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>sso6</object-name>
  </animation>

  <!-- Intérieur -->
  <model>
    <path>Aircraft/SpaceShip-One/Models/Interior/interior2.xml</path>
    <offsets>
      <x-m> 0 </x-m>
      <y-m> 0 </y-m>
      <z-m> 0 </z-m>
    </offsets>
  </model>

</PropertyList>

