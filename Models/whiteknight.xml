  <!-- Rotation des hélices des réacteurs -->
  <animation>
    <type>spin</type>
    <object-name>heliceG1</object-name>
    <property>controls/engines/engine[0]/throttle</property>
    <factor> 100 </factor>
    <center>
      <x-m> -3.257 </x-m>
      <y-m> -1.020 </y-m>
      <z-m>  1.593 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>heliceG2</object-name>
    <property>controls/engines/engine[0]/throttle</property>
    <factor> 100 </factor>
    <center>
      <x-m> -0.963 </x-m>
      <y-m> -1.020 </y-m>
      <z-m>  1.593 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
