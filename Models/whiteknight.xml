  <animation>
    <type>rotate</type>
    <object-name>profondeur</object-name>
    <property>surface-positions/elevator-pos-norm</property>
    <factor> 25 </factor>
    <center>
     <x-m> 7.349 </x-m>
     <y-m> 0.000 </y-m>
     <z-m> 2.671 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
