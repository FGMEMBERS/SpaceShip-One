  <animation>
    <type>rotate</type>
    <object-name>aileronG</object-name>
    <property>surface-positions/left-aileron-pos-norm</property>
    <factor> 15</factor>
    <axis>
      <x1-m>  -1.073 </x1-m>
      <y1-m> -11.313 </y1-m>
      <z1-m>   0.872 </z1-m>
      <x2-m>  -0.930 </x2-m>
      <y2-m>  -9.170 </y2-m>
      <z2-m>   0.712 </z2-m>
